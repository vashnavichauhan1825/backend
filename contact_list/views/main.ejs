
<body>
    
    <div class="container">
    <h3>VASHNAVI'S LIBRARY </h3>
    <ol >
       <% for(let i of book_list){%>
        <div class="holder-div">
        <li class="book">
            <div>
            <p><%= i.name %></p>
            <small><%='✍'+ i.author %></small>
        
       
            <a href="/delete-book/?id=<%= i._id %>">
                <i class="fa fa-trash"></i>
            </a> 
        </div>
        </li>
        </div>
        <%}%>
    </ol>
   <div>
    <form action="/addBook" method="post">
        <h5>CAN YOU ADD SOME GOOD 📚 IN MY LIBRARY 👇</h5>
        <label id="title-name">Title name :</label><br>
        <input id="title-name" type="text" name="name" placeholder="enter book title here !" required><br><br>
        <label id="author-name">Author name :</label><br>
        <input id="author-name" type="text" name="author" placeholder="enter author name here !" required><br><br>
        <button type="submit" >ADD BOOK</button>
     </form>
</div>
</body>
   